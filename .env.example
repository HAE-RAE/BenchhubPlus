# Database Configuration
DATABASE_URL=sqlite:///./benchhub_plus.db
# For PostgreSQL: postgresql://user:password@localhost:5432/benchhub_plus

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8501

# LLM Configuration (for Planner Agent)
OPENAI_API_KEY=your_openai_api_key_here
PLANNER_MODEL=gpt-4
PLANNER_TEMPERATURE=0.1

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# HRET Configuration
# TODO: Add HRET specific configuration when integrated
HRET_CONFIG_PATH=./config/hret_config.yaml
BENCHHUB_DATA_PATH=./data/benchhub

# Cache Configuration
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE=1000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8001/api/v1/auth/google/callback

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars-please-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24